<% if (posts) { %> <% posts.forEach(function(post) { %>
<div class="post">
  <div class="top">
    <a href="/posts/<%= post.url %>" data-id="<%= post.id %>">
      <h2>
        <%= post.title %>

        <% if (user.id && user.login) { %>
          <a href="/post/edit/<%= post.id %>" class="js-edit-post"></a>
        <% } %>
      </h2>
    </a>
  </div>
  <div class="body">
    <p>
      <%= post.body %>
    </p>
  </div>
  <div class="bottom">
    <div class="author">
      Автор:
      <a href="/users/<%= post.author.login %>/"><%= post.author.login %></a>
    </div>
    <a href="/posts/<%= post.url %>#<%= post.id %>">Комментарии: <%= post.commentCount %></a>
  </div>
</div>
<% }) %> <% } %>
