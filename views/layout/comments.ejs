<% if (items.length) { %>
<ul>
  <% } %> <% items.forEach(function(item){ %>
  <li id="<%= item.id %>">
    <div class="head">
      <a href="/users/<%= item.author.login %>/">
        <%= item.author.login %>
      </a>
      <spam class="date">
        <%= moment(item.createdAt).fromNow(); %>
      </spam>
    </div>
    <div class="body">
      <span><%= item.comment %></span>
      <a class="link js-answer">ответить</a>
    </div>

    <%- include('./comments', {items: item.children}) -%>
  </li>
  <% }) %> <% if (items.length) { %>
</ul>
<% } %>
