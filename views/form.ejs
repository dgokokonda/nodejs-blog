<% include layout/header.ejs %>
<style>
    h1 {
        text-align: center;
        color: #467aa7;
    }
    form {
        width: 500px;
        margin: 0 auto;
        padding: 30px 10px;
        border-radius: 4px;
        border: 4px solid #95e5e8;
        background: #ffffff;
    }
    form > input,
    form > textarea {
        width: 100%;
        max-width: 400px;
        padding: 10px;
        margin: 0 auto 10px;
        display: block;
        border-radius: 4px;
        border-color: #d1e7fb;
        border-width: 1px;
    }
    form .btnBlock {
        max-width: 422px;
        margin: 20px auto 0;
    }
    .btnBlock > button {
        width: 120px;
        height: 40px;
        border-radius: 4px;
        border: none;
        background: #65e265;
        color: aliceblue;
        font-size: 20px;
    }
</style>

<h1>Form</h1>
<form method="POST">
    <input type="text" name="title">
    <textarea name="body"></textarea>
    <div class="btnBlock">
        <button type="submit">Submit</button>
    </div>
</form>

