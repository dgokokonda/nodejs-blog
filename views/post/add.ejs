<% include ../layout/header.ejs %> <% if (user.id && user.login) { %>
<div class="main">
  <div class="container">
    <div class="content add-post">
      <form name="app-post" method="post">
        <h2>Добавление поста</h2>
        <div class="form-group">
          <label for="post-title">Заголовок</label>
          <input type="text" id="post-title" name="post-title" />
        </div>
        <div class="form-group">
          <label for="post-body">Текст</label>
          <textarea id="post-body" name="post-body"></textarea>
        </div>
        <div class="btns">
          <button class="button button--left js-save-post">
            Сохранить как черновик
          </button>
          <button class="button button--right js-publish-post">
            Опубликовать
          </button>
        </div>
      </form>
      <form id="upload" name="upload" enctype="multipart/form-data">
        <div class="upload">
          <div class="upload-wrapper">
            <input type="file" name="image" id="image" required />
            <button class="button button--right js-upload">Загрузить</button>
          </div>
        </div>
      </form>
    </div>

    <% include ../layout/sidebar.ejs %>
  </div>
</div>
<% } %> <% include ../layout/footer.ejs %>
